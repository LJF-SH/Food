<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_corner8"
        android:orientation="vertical"
        android:paddingTop="20dp">


        <TextView
            android:id="@+id/edit_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black_light"
            android:textSize="16sp"
            tools:text="标题" />

        <EditText
            android:id="@+id/edit_dialog_exittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_grey_corner4"
            android:padding="6dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"
            tools:text="输入内容" />

        <include layout="@layout/bootom_dialog_text" />
        <!--<include layout="@layout/bootom_dialog_button" />-->
    </LinearLayout>
</LinearLayout>